generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model animal_categories {
  id            Int             @id @unique(map: "id") @default(autoincrement())
  category      String?         @db.VarChar(255)
  animal_photos animal_photos[]
}

model animal_photos {
  id                Int                @id @default(autoincrement())
  category_id       Int?
  photo_url         String?            @db.Text
  animal_categories animal_categories? @relation(fields: [category_id], references: [id])

  @@index([category_id])
}
